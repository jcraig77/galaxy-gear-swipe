<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_alert"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:keepScreenOn="true"
	android:background="#ffffff"
	android:paddingTop="@dimen/activity_vertical_margin">
	
    <LinearLayout
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:keepScreenOn="true"
		android:paddingLeft="@dimen/activity_horizontal_margin">
		
        <LinearLayout
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:keepScreenOn="true"
			android:layout_gravity="center">
		
	         <TextView
		        android:id="@+id/amount_text"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="Amount" 
		        android:textSize="30sp"
				android:gravity="center" />
	    
	   		<TextView
		        android:id="@+id/amount_dollars"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="$5.57" 
		        android:textSize="50sp"
		        android:textStyle="bold"
				android:gravity="center" />
	   	</LinearLayout>
		
        <ImageView
            android:id="@+id/purchases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/purchases_red_large" />
    </LinearLayout>

    <TextView
        android:id="@+id/alert_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="You just spent $5.57.  Match into savings towards your goal?" 
        android:textSize="30sp"
        android:background="@color/amount_background"
        android:gravity="center"
        android:textColor="@color/amount_textColor"
       	android:textStyle="bold" />
   
   </LinearLayout>
