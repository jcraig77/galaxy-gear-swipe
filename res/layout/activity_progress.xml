<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_progress"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:keepScreenOn="true"
	android:background="@color/app_background_color">
	    
   	<ImageView
   	    android:id="@+id/success_icon"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:src="@drawable/checkmark_red"
   	    android:layout_gravity="center" />
   	
   	<LinearLayout 
   	    android:id="@+id/linear_progress_red"
	    android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@color/amount_background"
		android:gravity="center">
   	
	   	<TextView
	        android:id="@+id/progress_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/transfer_complete" 
	        android:textSize="30sp"
	        android:gravity="center"
	        android:textColor="@color/amount_textColor"
	       	android:textStyle="bold"
	       	android:paddingBottom="@dimen/activity_vertical_margin" />
   	    
	  	<ProgressBar
	        android:id="@+id/progress_bar"
	        style="@android:style/Widget.ProgressBar.Horizontal"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:progress="70" />
	  	
	  	<TextView
	  	    android:id="@+id/progress_subtext"
	  	    android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/progress_subtext" 
	        android:textSize="20sp"
	        android:gravity="center"
	        android:textColor="@color/amount_textColor"
	       	android:textStyle="bold" />
   	    
	  </LinearLayout>
</LinearLayout>
